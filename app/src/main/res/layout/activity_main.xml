<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="braess.constantin.wgterminal.MainActivity">

    <LinearLayout
        android:id="@+id/TitleParent"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/janHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/jan"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:clickable="true"
            android:onClick="janOnClick"
            android:longClickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/marcHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/marc"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:clickable="true"
            android:onClick="marcOnClick"
            android:focusable="true"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/constantinHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/constantin"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:clickable="true"
            android:onClick="constantinOnClick"
            android:focusable="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/TitleParent"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <ListView
            android:id="@+id/janChores"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:background="@color/white"
            android:divider="@color/grey"
            android:footerDividersEnabled="false"
            android:dividerHeight="1dp"
            />


        <ListView
            android:id="@+id/marcChores"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:divider="@color/grey"
            android:dividerHeight="1dp"/>

        <ListView
            android:id="@+id/constantinChores"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:divider="@color/grey"
            android:dividerHeight="1dp"/>
    </LinearLayout>

</RelativeLayout>